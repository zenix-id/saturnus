    <record id="category_zenix_orbit" model="ir.module.category">
        <field name="name">Zenix Orbit</field>
        <field name="description">Security category for Zenix Orbit</field>
        <field name="sequence">1</field>
    </record>

    <!-- Group for regular users -->
    <record id="group_zenix_orbit_user" model="res.groups">
        <field name="name">Zenix Orbit User</field>
        <field name="category_id" ref="category_zenix_orbit"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
